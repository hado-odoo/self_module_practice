<?xml version="1.0"?>
<odoo>

    <!-- BOOKS VIEW START -->

    <record id="simple_book_view" model="ir.ui.view">
        <field name="name">Books</field>
        <field name="model">books</field>
        <field name="arch" type="xml">
            <form string="books">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="selling_price"/>
                        <field name="tags"/>
                        <field name="author_name"/>
                        <field name="book_stock"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="books_detail" model="ir.actions.act_window">
        <field name="name">librarysystem_book</field>
        <field name="res_model">books</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                    No Records Found
            </p>
        </field>
    </record>

    <!-- BOOKS VIEW END -->



    <!-- STUDENTS VIEW START -->

    <record id="student_detail_view" model="ir.ui.view">
        <field name="name">Students</field>
        <field name="model">students</field>
        <field name="arch" type="xml">
            <form string="students">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="contact_no"/>
                        <field name="address"/>
                        <field name="Email"/>
                    </group>
                    <notebook>
                        <page string="students_book">
                            <group>
                                <field name = "name"/>
                            </group>
                        </page>
                </notebook>
                </sheet>
        </form>
    </field>
</record>

<record id="students_detail" model="ir.actions.act_window">
    <field name="name">students</field>
    <field name="res_model">students</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
                        No Records Found
        </p>
    </field>
</record>
<!-- STUDENTS VIEW END -->



</odoo>